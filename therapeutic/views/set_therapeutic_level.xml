<openerp>
    <data>
        <record model="ir.ui.view" id="view_set_therapeutic_obs_level">
            <field name="name">Set Therapeutic Obs Level</field>
            <field name="model">nh.clinical.therapeutic.level</field>
            <field name="arch" type="xml">
                <form create="false" edit="false">
                    <group>
                        <field name="patient" readonly="True" options="{'no_open': True}"/>
                        <field name="level"
                               class="therapeutic_level"/>
                        <field name="frequency"
                               class="therapeutic_frequency"
                               attrs="{'invisible': [('level', '=', False)], 'readonly': [('level', '!=', 2)]}"/>
                        <field name="staff_to_patient_ratio"
                               class="therapeutic_staff_to_patient_ratio"
                               attrs="{'invisible': [('level', 'not in', [3, 4])]}"/>
                    </group>
                    <footer>
                        <button string="Save" type="object" name="save" class="oe_button oe_highlight"/>
                        <button string="Cancel" special="cancel" class="oe_link"/>
                    </footer>
                </form>
            </field>
        </record>

        <record model="ir.actions.act_window" id="action_set_therapeutic_obs_level">
            <field name="name">Set Therapeutic Obs Level</field>
            <field name="res_model">nh.clinical.therapeutic.level</field>
            <field name="view_mode">form</field>
            <field name="view_id" ref="view_set_therapeutic_obs_level"/>
            <field name="target">new</field>
        </record>

        <record model="ir.ui.view" id="view_therapeutic_wardboard_patient_form">
            <field name="name">View Therapeutic Wardboard Patient Form</field>
            <field name="model">nh.clinical.wardboard</field>
            <field name="inherit_id" ref="nh_eobs.view_wardboard_form"/>
            <field name="arch" type="xml">
                <xpath expr="//form/header" position="inside">
                    <button name="%(action_set_therapeutic_obs_level)d"
                            string="Set Therapeutic Obs Level"
                            type="action"
                            groups="nh_clinical.group_nhc_ward_manager"/>
                </xpath>
            </field>
        </record>
    </data>
</openerp>